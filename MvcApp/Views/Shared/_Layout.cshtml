<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @System.Web.Optimization.Styles.Render("~/bundles/css")
</head>
<body ng-controller="mainCtrl">
    <div ng-controller="messageCtrl">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Home page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Catalog", "Index", "CatalogView")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>

        @if (Request.IsAuthenticated)
        {
            @Html.Partial("_ChatPartial");
        }
    </div>

    @RenderBody()


    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/ui.bootstrap/ui-bootstrap-tpls-0.12.0.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/angular-touch.js"></script>
    <script src="~/Scripts/myScripts/abn_tree_directive.js"></script>
    <script src="~/Scripts/textAngularSetup.js"></script>
    <script src="~/Scripts/textAngular.js"></script>
    <script src="~/Scripts/textAngular-sanitize.js"></script>
    <script src="~/Scripts/myScripts/loading-bar.js"></script>
    <script src="~/Scripts/myScripts/angular-bootstrap-lightbox.js"></script>
    <script src="~/Scripts/video.js"></script>

    <script src="~/Scripts/myScripts/App.js"></script>
    <script src="~/Scripts/myScripts/mainCtrl.js"></script>
    <script src="~/Scripts/myScripts/messageCtrl.js"></script>
    <script src="~/Scripts/myScripts/usersInformationCtrl.js"></script>
