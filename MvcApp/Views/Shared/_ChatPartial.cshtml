
<div style="position:fixed;right:0;margin-right:20px;bottom:0px;z-index:2000000005;width:400px;overflow:hidden; display:none" id="allChat">

    <div class=" chat-panel panel panel-default">
        <div class="panel-heading" id="textLogin">
            <i class="fa fa-comments fa-fw"></i>
            {{chatLogin}}
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-default btn-xs" id="minimize">
                    <i class="fa fa-chevron-down"></i>
                </button>
                <button type="button" class="btn btn-default btn-xs" id="close">
                    <i class="fa fa-times fa-fw"></i>
                </button>
            </div>
        </div>
        <div id="hiddenChat">
            <!-- /.panel-heading -->
            <div class="panel-body" id="scroll">
                <ul class="chat" id="chat-messages"></ul>
            </div>
            <!-- /.panel-body -->
            <div class="panel-footer">
                <div class="input-group">
                    <input id="btn-input" type="text" class="form-control input-sm" placeholder="Type your message here..." />
                    <span class="input-group-btn">
                        <button class="btn btn-warning btn-sm" id="btn-chat">
                            Send
                        </button>
                    </span>
                </div>
            </div>
            <!-- /.panel-footer -->
        </div>
    </div>
</div>